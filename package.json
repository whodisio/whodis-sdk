{
  "name": "whodis-sdk",
  "version": "0.2.0",
  "description": "A simple sdk for easy, secure authentication with the whodis platform. Setup secure authentication for your app in seconds.",
  "author": "UladKasach @uladkasach",
  "license": "MIT",
  "repository": "whodisio/whodis-sdk",
  "homepage": "https://github.com/whodisio/whodis-sdk",
  "keywords": [
    "whodis",
    "jwt",
    "json web token",
    "jsonwebtoken",
    "authentication",
    "authorization",
    "auth",
    "verification",
    "verify",
    "claims",
    "token",
    "lambda",
    "serverless",
    "express",
    "server"
  ],
  "bugs": "https://github.com/whodisio/whodis-sdk/issues",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:ts:cjs": "tsc -p ./tsconfig.build.cjs.json",
    "build:ts:esm": "tsc -p ./tsconfig.build.esm.json",
    "build": "npm run build:clean && npm run build:ts:esm && npm run build:ts:cjs",
    "test:types": "tsc --noEmit",
    "test:lint": "eslint -c ./.eslintrc.js src/**/*.ts",
    "test:unit": "jest --forceExit --verbose --passWithNoTests",
    "test:integration": "jest -c ./jest.integration.config.js --forceExit --verbose --passWithNoTests",
    "test": "npm run test:types && npm run test:lint && npm run test:unit && npm run test:integration",
    "prepublish": "npm run build",
    "preversion": "npm run prepublish && npm run test",
    "postversion": "git push origin HEAD --tags --no-verify"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "dotenv": "^8.2.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-airbnb-typescript": "7.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "^1.3.1",
    "jest": "^25.5.4",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "uuid": "^3.3.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "simple-hmackey-auth": "^1.0.3",
    "simple-jwt-auth": "^0.7.1",
    "simple-leveled-log-methods": "^0.1.4",
    "whodis-client": "^0.9.1"
  }
}
